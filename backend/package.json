{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "./src/server.ts",
  "scripts": {
    "start": "nodemon -r ts-node ./src/server.ts",
    "lint:start": "nodemon -r ./src/server.ts --exec \"npm run linter && ts-node\"",
    "linter": "eslint src/**/*.ts",
    "typeorm": "node_modules/.bin/ts-node node_modules/typeorm/cli.js",
    "add-migration": "node_modules/.bin/ts-node node_modules/typeorm/cli.js migration:generate -n",
    "migrate": "node_modules/.bin/ts-node node_modules/typeorm/cli.js migration:run",
    "generate-seed": "node_modules/.bin/ts-node node_modules/typeorm/cli.js migration:create -d data/seeders -n",
    "seed": "node_modules/.bin/ts-node data/seeders"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/node": "^13.5.3",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.0",
    "nodemon": "^2.0.2",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "typeorm": "^0.2.22"
  }
}
